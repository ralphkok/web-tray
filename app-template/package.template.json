{
  "name": "web-tray",
  "version": "1.0.0",
  "description": "Electron app that makes a single webpage available via a tray icon",
  "author": "Ralph Kok",
  "license": "BSD-2-Clause",
  "main": "./index.js",
  "scripts": {
    "start": "electron ./index.js --debug",
    "dist": "electron-builder",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "productName": "Web Tray",
    "appId": "com.rockabit.webtray.WebTray",
    "mac": {
      "category": "web.tray"
    },
    "linux": {
      "target": "deb"
    },
    "win": {
      "target": "nsis"
    },
    "directories": {
      "output": "release"
    },
    "files": [
      "index.js",
      "node_modules/",
      "package.json"
    ],
    "extraResources": [
      "assets/"
    ]
  },
  "devDependencies": {
    "electron": "9.0.0",
    "electron-builder": "^22.8.1"
  },
  "dependencies": {
    "command-line-args": "^5.1.1",
    "menubar": "^9.0.1"
  }
}
